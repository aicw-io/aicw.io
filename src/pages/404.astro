---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout
  title="Page Not Found | AI Chat Watch"
  description="The page you're looking for doesn't exist or has been moved."
  robots="noindex, nofollow"
>
  <div class="min-h-screen flex flex-col gradient-dark">
    <Navigation variant="dark" />

    <main class="flex-1 flex items-center justify-center">
      <div class="text-center px-6 max-w-lg">
        <!-- Logo -->
        <img
          src="/ai-chat-watch-manifest-192x192.png"
          alt="AI Chat Watch"
          width="80"
          height="80"
          class="mx-auto mb-8 rounded-2xl shadow-lg"
        />

        <!-- 404 Number -->
        <div class="text-[180px] md:text-[220px] font-bold text-white/10 leading-none font-heading select-none">
          404
        </div>

        <!-- Message -->
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-4 -mt-8 font-heading">
          Page Not Found
        </h1>
        <p class="text-white/70 text-lg mb-8">
          The page you're looking for doesn't exist or has been moved.
        </p>

        <!-- CTA Button -->
        <a
          href="/"
          class="inline-flex items-center gap-2 px-8 py-4 gradient-primary rounded-xl text-white font-semibold hover:shadow-xl transition-all text-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go to Homepage
        </a>
      </div>
    </main>
  </div>
</BaseLayout>
