---
import { getCollection, getEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { publishedFilter } from '../../utils/content-helpers';

export async function getStaticPaths() {
  const authors = await getCollection('authors');
  return authors.map((author) => ({
    params: { slug: author.slug },
    props: { author },
  }));
}

const { author } = Astro.props;
const { Content } = await author.render();

// Get all blog posts by this author
const allPosts = await getCollection('blog', publishedFilter);
// Filter posts by resolving author reference and comparing IDs
const authorPosts = await Promise.all(
  allPosts.map(async (post) => {
    const postAuthor = await getEntry(post.data.author);
    return postAuthor.id === author.id ? post : null;
  })
).then(posts => posts.filter(p => p !== null));
const sortedPosts = authorPosts.sort((a, b) => b.data.published_at.valueOf() - a.data.published_at.valueOf());
---

<BaseLayout
  title={`${author.data.name} | AICW`}
  description={author.data.bio}
  image={author.data.avatar}
  imageAlt={author.data.name}
>
  <div class="min-h-screen bg-bg-secondary">
    <!-- Header/Navigation -->
    <nav class="bg-bg-primary border-b border-border">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-gradient-primary font-heading">
            AI Chat Watch
          </a>
          <div class="flex gap-6">
            <a href="/blog" class="text-text-secondary hover:text-text-primary transition-colors">
              Blog
            </a>
            <a href="/#features" class="text-text-secondary hover:text-text-primary transition-colors">
              Features
            </a>
            <a href="/#installation" class="text-text-secondary hover:text-text-primary transition-colors">
              Install
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Author Header -->
    <header class="bg-gradient-primary py-16">
      <div class="container mx-auto px-6">
        <div class="max-w-4xl mx-auto">
          <div class="flex items-center gap-6 mb-6">
            <img
              src={author.data.avatar}
              alt={author.data.name}
              class="w-32 h-32 rounded-full border-4 border-white shadow-xl object-cover"
            />
            <div>
              <h1 class="text-4xl md:text-5xl font-bold mb-2 text-white font-heading">
                {author.data.name}
              </h1>
              <p class="text-xl text-white/90">
                {author.data.title}
              </p>
            </div>
          </div>

          <!-- Social Links -->
          <div class="flex flex-wrap gap-4">
            {author.data.website && (
              <a
                href={author.data.website}
                target="_blank"
                rel="noopener"
                class="px-4 py-2 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white hover:bg-white/20 transition-all flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                Website
              </a>
            )}
            {author.data.github && (
              <a
                href={author.data.github}
                target="_blank"
                rel="noopener"
                class="px-4 py-2 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white hover:bg-white/20 transition-all flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.43 9.8 8.2 11.38.6.11.82-.26.82-.58v-2.03c-3.34.73-4.04-1.61-4.04-1.61-.55-1.39-1.34-1.76-1.34-1.76-1.09-.74.08-.73.08-.73 1.2.09 1.84 1.24 1.84 1.24 1.07 1.84 2.81 1.31 3.5 1 .1-.78.42-1.31.76-1.61-2.67-.3-5.47-1.33-5.47-5.93 0-1.31.47-2.38 1.24-3.22-.13-.3-.54-1.52.12-3.18 0 0 1.01-.32 3.3 1.23a11.5 11.5 0 013.01-.4c1.02.01 2.05.14 3.01.4 2.29-1.55 3.3-1.23 3.3-1.23.66 1.66.24 2.88.12 3.18.77.84 1.24 1.91 1.24 3.22 0 4.61-2.81 5.63-5.48 5.92.43.37.81 1.1.81 2.22v3.29c0 .32.22.7.82.58C20.57 21.8 24 17.3 24 12c0-6.63-5.37-12-12-12z"/>
                </svg>
                GitHub
              </a>
            )}
            {author.data.twitter && (
              <a
                href={author.data.twitter}
                target="_blank"
                rel="noopener"
                class="px-4 py-2 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white hover:bg-white/20 transition-all flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                Twitter
              </a>
            )}
            {author.data.linkedin && (
              <a
                href={author.data.linkedin}
                target="_blank"
                rel="noopener"
                class="px-4 py-2 bg-white/10 backdrop-blur border border-white/20 rounded-lg text-white hover:bg-white/20 transition-all flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Author Bio & Posts -->
    <div class="container mx-auto px-6 py-12">
      <div class="max-w-4xl mx-auto">
        <!-- Bio Section -->
        <section class="mb-12">
          <div class="bg-white rounded-2xl p-8 shadow-lg">
            <h2 class="text-2xl font-bold mb-4">About</h2>
            <div class="prose prose-lg max-w-none
              prose-headings:font-heading prose-headings:text-text-primary
              prose-p:text-text-secondary prose-p:leading-relaxed
              prose-a:text-primary-700 prose-a:no-underline hover:prose-a:underline
              prose-strong:text-text-primary
            ">
              <Content />
            </div>
          </div>
        </section>

        <!-- Posts by Author -->
        <section>
          <h2 class="text-3xl font-bold mb-8">
            Articles by {author.data.name}
            {sortedPosts.length > 0 && (
              <span class="text-text-light text-xl ml-2">({sortedPosts.length})</span>
            )}
          </h2>

          {sortedPosts.length === 0 ? (
            <div class="bg-white rounded-2xl p-12 text-center shadow-lg">
              <div class="text-6xl mb-4">üìù</div>
              <h3 class="text-xl font-bold mb-2">No articles yet</h3>
              <p class="text-text-secondary">
                Check back soon for articles by {author.data.name}!
              </p>
            </div>
          ) : (
            <div class="space-y-6">
              {sortedPosts.map((post) => (
                <article class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                  <div class="md:flex">
                    {post.data.heroImage && (
                      <a href={`/blog/${post.slug}/`} class="md:w-1/3">
                        <img
                          src={post.data.heroImage}
                          alt={post.data.heroImageAlt || post.data.title}
                          class="w-full h-48 md:h-full object-cover"
                        />
                      </a>
                    )}
                    <div class={`p-6 ${post.data.heroImage ? 'md:w-2/3' : 'w-full'}`}>
                      {/* Categories */}
                      {post.data.categories && post.data.categories.length > 0 && (
                        <div class="flex flex-wrap gap-2 mb-3">
                          {post.data.categories.slice(0, 2).map(category => (
                            <span class="px-3 py-1 text-xs rounded-full bg-primary-100 text-primary-700">
                              {category}
                            </span>
                          ))}
                        </div>
                      )}

                      {/* Title */}
                      <h3 class="text-2xl font-bold mb-3 hover:text-primary-700 transition-colors">
                        <a href={`/blog/${post.slug}/`}>
                          {post.data.title}
                        </a>
                      </h3>

                      {/* Description */}
                      <p class="text-text-secondary mb-4">
                        {post.data.description}
                      </p>

                      {/* Meta */}
                      <div class="flex items-center justify-between text-sm text-text-light">
                        <time datetime={post.data.published_at.toISOString()}>
                          {new Intl.DateTimeFormat('en-US', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                          }).format(post.data.published_at)}
                        </time>
                        <a
                          href={`/blog/${post.slug}/`}
                          class="text-primary-700 hover:text-primary-800 font-semibold flex items-center gap-1"
                        >
                          Read More
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                          </svg>
                        </a>
                      </div>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          )}
        </section>

        <!-- Back to Blog -->
        <div class="mt-12 text-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-primary-700 hover:text-primary-800 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to All Articles
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- JSON-LD for Author Profile -->
  <script type="application/ld+json" slot="head" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": author.data.name,
    "jobTitle": author.data.title,
    "description": author.data.bio,
    "image": `https://www.aicw.io${author.data.avatar}`,
    "url": `https://www.aicw.io/author/${author.slug}/`,
    "sameAs": [
      author.data.website,
      author.data.github,
      author.data.twitter,
      author.data.linkedin
    ].filter(Boolean)
  })} />
</BaseLayout>
