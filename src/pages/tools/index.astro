---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';

const tools = [
  {
    title: 'Robots.txt Tester',
    description: 'Validate syntax and test URL access for search engines and AI crawlers like Googlebot, GPTBot, and Claude.',
    href: '/tools/robots-txt-tester/',
    icon: 'robot',
    available: true,
  },
  {
    title: 'Sitemap Generator',
    description: 'Generate XML sitemaps with priority, change frequency, and last modified settings.',
    href: '/tools/sitemap-generator/',
    icon: 'map',
    available: true,
  },
  {
    title: 'Schema Generator',
    description: 'Create JSON-LD structured data for 13+ schema types including Article, Product, FAQ, and more.',
    href: '/tools/schema-generator/',
    icon: 'code',
    available: true,
  },
  {
    title: 'LLMs.txt Generator',
    description: 'Generate llms.txt files to help AI assistants understand your website.',
    href: '/tools/llms-txt-generator/',
    icon: 'file-text',
    available: true,
  },
];

const iconPaths = {
  robot: 'M12 2a2 2 0 012 2c0 .74-.4 1.387-1 1.732V6h1a7 7 0 017 7v1h1a1 1 0 110 2h-1v1a7 7 0 01-7 7H9a7 7 0 01-7-7v-1H1a1 1 0 110-2h1v-1a7 7 0 017-7h1v-.268A2 2 0 0112 2zm0 6a5 5 0 00-5 5v4a5 5 0 005 5h2a5 5 0 005-5v-4a5 5 0 00-5-5h-2zm-1 4a1.5 1.5 0 110 3 1.5 1.5 0 010-3zm4 0a1.5 1.5 0 110 3 1.5 1.5 0 010-3z',
  map: 'M9 6.882l-7-3.5v13.236l7 3.5 6-3 7 3.5V7.382l-7-3.5-6 3zM15 15l-6 3V9l6-3v9z',
  code: 'M13.325 3.05L8.667 20.432l1.932.518 4.658-17.382-1.932-.518zM7.612 18.36l1.36-1.448-4.88-4.59 4.88-4.59-1.36-1.448L2 12.322l5.612 6.038zM16.388 18.36l-1.36-1.448 4.88-4.59-4.88-4.59 1.36-1.448L22 12.322l-5.612 6.038z',
  'file-text': 'M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6zm-1 2l5 5h-5V4zM8 13h8v2H8v-2zm0 4h8v2H8v-2zm0-8h3v2H8V9z',
};
---

<BaseLayout
  title="Free SEO Tools - AICW.io"
  description="Free online SEO tools including robots.txt tester, sitemap generator, schema generator, and llms.txt generator. No signup required."
  keywords="SEO tools, robots.txt tester, sitemap generator, schema generator, llms.txt, free SEO tools"
>
  <Navigation />

  <main class="container mx-auto px-4 py-12 max-w-6xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Free SEO Tools</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Client-side SEO tools that run entirely in your browser. No data is sent to any server.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {tools.map((tool) => (
        <a
          href={tool.available ? tool.href : undefined}
          class={`
            block p-6 bg-white rounded-xl border-2 transition-all duration-200
            ${tool.available
              ? 'border-gray-200 hover:border-blue-300 hover:shadow-lg cursor-pointer'
              : 'border-gray-100 opacity-60 cursor-not-allowed'
            }
          `}
        >
          <div class="flex items-start gap-4">
            <div class={`
              flex-shrink-0 w-12 h-12 rounded-lg flex items-center justify-center
              ${tool.available ? 'bg-blue-100 text-blue-600' : 'bg-gray-100 text-gray-400'}
            `}>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={iconPaths[tool.icon as keyof typeof iconPaths]} />
              </svg>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2">
                <h2 class="text-xl font-semibold text-gray-900">{tool.title}</h2>
                {!tool.available && (
                  <span class="px-2 py-0.5 text-xs font-medium bg-gray-100 text-gray-600 rounded-full">
                    Coming Soon
                  </span>
                )}
              </div>
              <p class="mt-1 text-gray-600">{tool.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>

    <section class="mt-16 prose prose-gray max-w-none">
      <h2>About Our SEO Tools</h2>
      <p>
        All tools on this page are 100% client-side, meaning they run entirely in your browser.
        Your data never leaves your device, making them perfect for testing sensitive content
        or working offline.
      </p>

      <h3>Features</h3>
      <ul>
        <li><strong>Privacy-First:</strong> No data is sent to any server</li>
        <li><strong>No Signup:</strong> Use all tools immediately without creating an account</li>
        <li><strong>Free Forever:</strong> All tools are completely free to use</li>
        <li><strong>Local Storage:</strong> Your work is saved in your browser</li>
      </ul>
    </section>
  </main>
</BaseLayout>
