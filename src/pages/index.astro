---
import BaseLayout from '../layouts/BaseLayout.astro';
import NetworkViz from '../components/NetworkViz.astro';
---

<BaseLayout>
  <!-- Hero Section -->
  <header class="relative min-h-screen flex items-center overflow-hidden isolate gradient-dark">
    <NetworkViz />

    <!-- Gradient Background -->
    <div class="absolute inset-0 w-full h-full animate-float opacity-10 pointer-events-none z-[0]">
      <div class="absolute top-1/2 left-1/5 w-1/2 h-1/2 bg-primary-500/15 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/5 right-1/5 w-1/2 h-1/2 bg-accent-400/15 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white font-heading tracking-tight">
          AI Chat Watch
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-12">
          Grade Your AI Visibility & Monitor What AI Says About Your Brand
        </p>

        <!-- Quick Install Box -->
        <div class="bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl p-8 mb-8">
          <h3 class="text-2xl font-bold text-white mb-3"><span class="emoji">‚ö°</span> Check Your AI Visibility in 30 Seconds</h3>
          <p class="text-white/80 mb-6">Is AI ignoring your website? Find out instantly:</p>

          <div class="bg-dark-900/80 rounded-lg p-4 flex items-center gap-3 mb-4">
            <code class="flex-1 text-left text-white/90 font-mono text-sm md:text-base">
              npx @aichatwatch/aicw ai-visibility YOURWEBSITE.com
            </code>
            <button class="copy-btn px-4 py-2 bg-primary-600 hover:bg-primary-700 rounded-lg text-white transition-colors">
              Copy
            </button>
          </div>

          <p class="text-sm text-white/70">
            No signup required ‚Ä¢ Free & open-source ‚Ä¢ Runs on your computer
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="#features" class="px-8 py-4 gradient-primary rounded-xl text-white font-semibold hover:shadow-xl transition-all">
            <span class="emoji">üöÄ</span> See How It Works
          </a>
          <a href="/demo/reports/" class="px-8 py-4 bg-white/10 backdrop-blur border border-white/20 rounded-xl text-white font-semibold hover:bg-white/20 transition-all">
            <span class="emoji">üìä</span> View Sample Reports
          </a>
          <a href="https://github.com/aichatwatch/aicw" target="_blank" rel="noopener" class="px-8 py-4 bg-white/10 backdrop-blur border border-white/20 rounded-xl text-white font-semibold hover:bg-white/20 transition-all flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.43 9.8 8.2 11.38.6.11.82-.26.82-.58v-2.03c-3.34.73-4.04-1.61-4.04-1.61-.55-1.39-1.34-1.76-1.34-1.76-1.09-.74.08-.73.08-.73 1.2.09 1.84 1.24 1.84 1.24 1.07 1.84 2.81 1.31 3.5 1 .1-.78.42-1.31.76-1.61-2.67-.3-5.47-1.33-5.47-5.93 0-1.31.47-2.38 1.24-3.22-.13-.3-.54-1.52.12-3.18 0 0 1.01-.32 3.3 1.23a11.5 11.5 0 013.01-.4c1.02.01 2.05.14 3.01.4 2.29-1.55 3.3-1.23 3.3-1.23.66 1.66.24 2.88.12 3.18.77.84 1.24 1.91 1.24 3.22 0 4.61-2.81 5.63-5.48 5.92.43.37.81 1.1.81 2.22v3.29c0 .32.22.7.82.58C20.57 21.8 24 17.3 24 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            Star on GitHub
          </a>
        </div>
      </div>
    </div>
  </header>

  <!-- Features Section -->
  <section id="features" class="py-24 bg-bg-secondary">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Powerful Features</h2>
        <p class="text-xl text-text-secondary max-w-3xl mx-auto">
          Everything you need to monitor and analyze AI responses about your brand
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature Cards -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-5xl mb-4"><span class="emoji">üéØ</span></div>
          <h3 class="text-xl font-bold mb-3">AI Visibility Grading</h3>
          <p class="text-text-secondary">
            Get instant visibility scores and actionable recommendations to improve your AI presence
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-5xl mb-4"><span class="emoji">ü§ñ</span></div>
          <h3 class="text-xl font-bold mb-3">Monitor 20+ AI Models</h3>
          <p class="text-text-secondary">
            Track responses from ChatGPT, Claude, Gemini, Perplexity, and more
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-5xl mb-4"><span class="emoji">üìä</span></div>
          <h3 class="text-xl font-bold mb-3">Beautiful Reports</h3>
          <p class="text-text-secondary">
            Interactive HTML reports with trends, entities, and competitive analysis
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-5xl mb-4"><span class="emoji">üîç</span></div>
          <h3 class="text-xl font-bold mb-3">Entity Extraction</h3>
          <p class="text-text-secondary">
            Automatically identify companies, products, and resources mentioned by AI
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-5xl mb-4"><span class="emoji">üìà</span></div>
          <h3 class="text-xl font-bold mb-3">Trend Tracking</h3>
          <p class="text-text-secondary">
            Monitor how AI responses change over time with historical data
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-5xl mb-4"><span class="emoji">üîí</span></div>
          <h3 class="text-xl font-bold mb-3">100% Private</h3>
          <p class="text-text-secondary">
            Runs locally on your computer. Your data never leaves your machine
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Installation Section -->
  <section id="installation" class="py-24 bg-white">
    <div class="container mx-auto px-6 max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Get Started in Seconds</h2>
        <p class="text-xl text-text-secondary">
          No complex setup. Just run one command and start monitoring.
        </p>
      </div>

      <div class="space-y-8">
        <div class="bg-bg-secondary rounded-2xl p-8">
          <h3 class="text-2xl font-bold mb-4">1. Run AICW</h3>
          <div class="bg-dark-900 rounded-lg p-4 font-mono text-white">
            npx @aichatwatch/aicw
          </div>
        </div>

        <div class="bg-bg-secondary rounded-2xl p-8">
          <h3 class="text-2xl font-bold mb-4">2. Configure Your Project</h3>
          <p class="text-text-secondary mb-4">
            Follow the interactive prompts to set up your monitoring questions and select AI models.
          </p>
        </div>

        <div class="bg-bg-secondary rounded-2xl p-8">
          <h3 class="text-2xl font-bold mb-4">3. View Your Reports</h3>
          <p class="text-text-secondary">
            Get instant insights in beautiful, interactive HTML reports.
          </p>
        </div>
      </div>

      <div class="text-center mt-12">
        <a href="https://github.com/aichatwatch/aicw#readme" target="_blank" rel="noopener" class="inline-block px-8 py-4 gradient-primary rounded-xl text-white font-semibold hover:shadow-xl transition-all">
          Read Full Documentation ‚Üí
        </a>
      </div>
    </div>
  </section>

  <!-- Blog CTA Section -->
  <section class="py-24 gradient-primary">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-white">Stay Updated</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Learn about AI visibility strategies, competitive intelligence, and more on our blog.
      </p>
      <a href="/blog" class="inline-block px-8 py-4 bg-white rounded-xl text-primary-700 font-semibold hover:shadow-xl transition-all">
        Read Our Blog ‚Üí
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 bg-dark-900 text-white">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8 mb-8">
        <div>
          <h3 class="text-xl font-bold mb-4">AI Chat Watch</h3>
          <p class="text-white/70">
            Open-source tool for monitoring AI chatbot responses and tracking brand visibility.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Links</h3>
          <ul class="space-y-2">
            <li><a href="/#features" class="text-white/70 hover:text-white transition-colors">Features</a></li>
            <li><a href="/#installation" class="text-white/70 hover:text-white transition-colors">Installation</a></li>
            <li><a href="/blog" class="text-white/70 hover:text-white transition-colors">Blog</a></li>
            <li><a href="/demo/reports/" class="text-white/70 hover:text-white transition-colors">Demo Reports</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-xl font-bold mb-4">Community</h3>
          <ul class="space-y-2">
            <li><a href="https://github.com/aichatwatch/aicw" target="_blank" rel="noopener" class="text-white/70 hover:text-white transition-colors">GitHub</a></li>
            <li><a href="https://www.npmjs.com/package/@aichatwatch/aicw" target="_blank" rel="noopener" class="text-white/70 hover:text-white transition-colors">NPM</a></li>
            <li><a href="https://github.com/aichatwatch/aicw/issues" target="_blank" rel="noopener" class="text-white/70 hover:text-white transition-colors">Report Issues</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-white/10 pt-8 text-center text-white/50">
        <p>&copy; {new Date().getFullYear()} AI Chat Watch. Open-source MIT License.</p>
      </div>
    </div>
  </footer>

  <!-- Analytics Script -->
  <script is:inline src="/assets/js/aicw-view.js"></script>

  <!-- Copy Button Script -->
  <script>
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const code = btn.previousElementSibling?.textContent || '';
        try {
          await navigator.clipboard.writeText(code.trim());
          btn.textContent = 'Copied!';
          setTimeout(() => btn.textContent = 'Copy', 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  </script>
</BaseLayout>
