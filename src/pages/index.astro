---
import BaseLayout from '../layouts/BaseLayout.astro';
import NetworkViz from '../components/NetworkViz.astro';
import Navigation from '../components/Navigation.astro';
import { Image } from 'astro:assets';

// Cloud screenshots for features section
import trafficSourceImg from '../assets/screenshots/aicw-cloud-dashboard-traffic-source-comparison.png';
import aiVisibilityImg from '../assets/screenshots/aicw-cloud-ai-visibility-main.png';
import botsImg from '../assets/screenshots/aicw-cloud-dashboard-bots.png';

// Screenshots for How It Works section
import dashboardImg from '../assets/screenshots/aicw-cloud-dashboard.png';
import topPagesImg from '../assets/screenshots/aicw-cloud-dashboard-top-pages.png';

// Hero screenshot preview
import heroPreviewImg from '../assets/screenshots/aicw-cloud-dashboard.png';
---

<BaseLayout>
  <!-- Hero Section -->
  <header class="relative min-h-screen flex flex-col overflow-hidden isolate gradient-dark">
    <Navigation variant="dark" />

    <div class="flex-1 flex items-center">
    <NetworkViz />

    <!-- Gradient Background -->
    <div class="absolute inset-0 w-full h-full animate-float opacity-10 pointer-events-none z-[0]">
      <div class="absolute top-1/2 left-1/5 w-1/2 h-1/2 bg-primary-500/15 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/5 right-1/5 w-1/2 h-1/2 bg-accent-400/15 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-6xl md:text-8xl font-bold mb-2 text-white font-heading tracking-tight">
          AICW
        </h1>
        <p class="text-sm md:text-base text-primary-300/70 font-medium mb-4 tracking-wide uppercase">
          Advanced Insights for Content and Web
        </p>
        <p class="text-2xl md:text-3xl text-white/90 mb-8">
          Monitor and Grow Your Website Marketing
        </p>

        <!-- Dashboard Preview (above buttons) -->
        <div class="relative max-w-3xl mx-auto mb-8">
          <div class="rounded-xl overflow-hidden shadow-2xl border border-white/10 bg-white/5 backdrop-blur">
            <Image
              src={heroPreviewImg}
              alt="AICW Dashboard showing AI traffic analytics"
              width={800}
              class="w-full h-auto"
              loading="eager"
            />
          </div>
          <!-- Subtle glow effect -->
          <div class="absolute -inset-4 bg-primary-500/20 rounded-2xl blur-2xl -z-10"></div>
        </div>

        <!-- Dual CTA Buttons -->
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="https://app.aicw.io" class="inline-flex items-center gap-2 px-8 py-4 gradient-primary rounded-xl text-white font-semibold hover:shadow-xl transition-all text-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Sign Up
          </a>
          <a href="https://app.aicw.io/public/aicw.io?utm_campaign=main_landing" class="inline-flex items-center gap-2 px-8 py-4 bg-green-500 rounded-xl text-white font-semibold hover:bg-green-600 transition-all text-lg group">
            See It Live
            <svg class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    </div>
  </header>

  <!-- Problem Statement Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6">Analytics Without the Privacy Trade-off</h2>
        <p class="text-xl text-text-secondary mb-8 max-w-3xl mx-auto">
          Traditional analytics tools track your visitors with cookies and store IP addresses. AICW gives you the insights you need without compromising privacy.
        </p>
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">No Cookies</h3>
            <p class="text-text-secondary">No tracking cookies means no consent banners needed. Your visitors stay anonymous.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">No IP Storage</h3>
            <p class="text-text-secondary">Privacy by design. GDPR and CCPA compliant out of the box — no configuration required.</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Lightweight Script</h3>
            <p class="text-text-secondary">Under 1KB gzipped. Won't slow your site down. Loads async, no render blocking.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-24 bg-bg-secondary">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Simple Analytics, Powerful Insights</h2>
        <p class="text-xl text-text-secondary max-w-3xl mx-auto">
          Track traffic, understand your visitors, and get AI-powered insights — all while respecting privacy.
        </p>
      </div>

      <!-- Main Feature Pillars (2x2 Grid) -->
      <div class="grid md:grid-cols-2 gap-8 mb-12">
        <!-- Pillar 1: Traffic Analytics (PRIMARY) -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Traffic Analytics</h3>
          <p class="text-text-secondary mb-4">
            Real-time page views, unique visitors, top pages, and session data. See how people find and navigate your site — without tracking individuals.
          </p>
          <div class="rounded-lg overflow-hidden border border-gray-100 shadow-sm">
            <Image
              src={dashboardImg}
              alt="AICW Dashboard showing traffic analytics overview"
              width={600}
              class="w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Pillar 2: Traffic Sources (PRIMARY) -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Traffic Sources & Referrers</h3>
          <p class="text-text-secondary mb-4">
            See which channels send you traffic — search, direct, social, AI chatbots, and referrals. Track UTM campaigns and understand where your visitors come from.
          </p>
          <div class="rounded-lg overflow-hidden border border-gray-100 shadow-sm">
            <Image
              src={trafficSourceImg}
              alt="Traffic sources breakdown by channel"
              width={600}
              class="w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Pillar 3: AI Visibility Score (SECONDARY) -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow">
          <div class="w-14 h-14 bg-purple-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">AI Visibility Score</h3>
          <p class="text-text-secondary mb-4">
            Bonus feature: 40+ diagnostic checks across ChatGPT, Claude, Perplexity, and Gemini. See if AI can access your content and get actionable recommendations.
          </p>
          <div class="rounded-lg overflow-hidden border border-gray-100 shadow-sm">
            <Image
              src={aiVisibilityImg}
              alt="AI Visibility Score showing accessibility to AI services"
              width={600}
              class="w-full h-auto"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Pillar 4: Brand & Source Rankings (SECONDARY) -->
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow relative overflow-hidden">
          <div class="absolute top-4 right-4">
            <span class="px-3 py-1 bg-cyan-100 text-cyan-700 rounded-full text-xs font-semibold">AI Insights</span>
          </div>
          <div class="w-14 h-14 bg-cyan-100 rounded-xl flex items-center justify-center mb-4">
            <svg class="w-7 h-7 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-3">Brand Mention Tracking</h3>
          <p class="text-text-secondary mb-4">
            Bonus feature: See where your brand ranks when AI answers category questions. Track your domain as a cited source across ChatGPT, Claude, and more.
          </p>
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-100">
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium">Your Brand</span>
                <div class="w-32 h-2 bg-cyan-400 rounded-full"></div>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-text-secondary">Competitor A</span>
                <div class="w-24 h-2 bg-gray-200 rounded-full"></div>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-sm text-text-secondary">Competitor B</span>
                <div class="w-20 h-2 bg-gray-200 rounded-full"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Secondary Features -->
      <div class="grid md:grid-cols-4 gap-6">
        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow text-center">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-1">Privacy-First</h4>
          <p class="text-sm text-text-secondary">No cookies. No IP storage. GDPR compliant.</p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow text-center">
          <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-1">Lightweight Script</h4>
          <p class="text-sm text-text-secondary">Under 1KB. Won't slow your site.</p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow text-center">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-1">Geographic Insights</h4>
          <p class="text-sm text-text-secondary">Country & region-level analytics.</p>
        </div>

        <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow text-center">
          <div class="w-12 h-12 bg-cyan-100 rounded-xl flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h4 class="font-bold mb-1">Setup in 60 Seconds</h4>
          <p class="text-sm text-text-secondary">One line of code. Any framework.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-6">
      <div class="text-center flex flex-wrap gap-4 justify-center">
        <a href="https://app.aicw.io" class="inline-flex items-center gap-2 px-8 py-4 gradient-primary rounded-xl text-white font-semibold hover:shadow-xl transition-all text-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          Sign Up
        </a>
        <a href="https://app.aicw.io/public/aicw.io?utm_campaign=main_landing" class="inline-flex items-center gap-2 px-8 py-4 bg-green-500 rounded-xl text-white font-semibold hover:bg-green-600 transition-all text-lg group">
          See It Live
          <svg class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Learn About AI Visibility Section -->
  <section class="py-24 gradient-primary">
    <div class="container mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-white">Learn About Website Visibility</h2>
        <p class="text-xl text-white/90 max-w-2xl mx-auto">
          Free guides to help you understand and improve your online presence.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <!-- AI SEO Guide Book -->
        <a href="/ai-seo-guide-book/" class="bg-white/10 backdrop-blur rounded-xl p-6 hover:bg-white/20 transition-all group">
          <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">AI SEO Guide</h3>
          <p class="text-white/70 text-sm">Complete guide to optimizing for AI search</p>
        </a>

        <!-- AI Search Engines -->
        <a href="/ai-search-engine/" class="bg-white/10 backdrop-blur rounded-xl p-6 hover:bg-white/20 transition-all group">
          <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">AI Search Engines</h3>
          <p class="text-white/70 text-sm">How ChatGPT, Perplexity & others work</p>
        </a>

        <!-- AI Chatbots -->
        <a href="/ai-chat-bot/" class="bg-white/10 backdrop-blur rounded-xl p-6 hover:bg-white/20 transition-all group">
          <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">AI Chatbots</h3>
          <p class="text-white/70 text-sm">Understanding major AI assistants</p>
        </a>

        <!-- AI Crawler Bots -->
        <a href="/ai-crawler-bot/" class="bg-white/10 backdrop-blur rounded-xl p-6 hover:bg-white/20 transition-all group">
          <div class="w-12 h-12 bg-white/20 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">AI Crawlers</h3>
          <p class="text-white/70 text-sm">Bots that index your site for AI</p>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
