---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';

// Get the specific book
const books = await getCollection('books');
const book = books.find(b => b.slug === 'ai-seo-guide');

if (!book) {
  return Astro.redirect('/404');
}

const { Content } = await book.render();

// Get chapters for this book
const allChapters = await getCollection('book-chapters',
  ({ data }) => data.book === 'ai-seo-guide'
);
const sortedChapters = allChapters.sort((a, b) => a.data.chapterNumber - b.data.chapterNumber);

const {
  title,
  subtitle,
  description,
  author,
  coverImage,
  pageCount,
  downloads,
  purchaseLinks,
} = book.data;

// First chapter for "Start Reading" button
const firstChapter = sortedChapters[0];
const firstChapterSlug = firstChapter?.slug.split('/').pop();
---

<BaseLayout
  title={`${title} | AI Chat Watch`}
  description={description}
  canonical="/ai-seo-guide-book/"
  image={coverImage}
>
  <div class="min-h-screen bg-bg-secondary">
    <Navigation />

    <!-- Book Header -->
    <header class="gradient-dark py-12">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-white/60 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <span class="text-white/80">{title}</span>
          </nav>

          <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
            <!-- Cover Image -->
            <div class="flex-shrink-0 mx-auto lg:mx-0">
              <img
                src={coverImage}
                alt={title}
                class="w-48 md:w-56 lg:w-64 rounded-lg shadow-2xl"
              />
            </div>

            <!-- Book Info -->
            <div class="flex-1 text-center lg:text-left">
              <h1 class="text-3xl md:text-4xl font-bold text-white mb-3 font-heading">
                {title}
              </h1>

              {subtitle && (
                <p class="text-lg text-white/80 mb-4">
                  {subtitle}
                </p>
              )}

              <p class="text-white/60 mb-4">
                By {author}
                {pageCount && <span> &middot; {pageCount} pages</span>}
              </p>

              <p class="text-white/70 mb-6 max-w-2xl">
                {description}
              </p>

              <!-- Action Buttons -->
              <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
                {firstChapter && (
                  <a
                    href={`/ai-seo-guide-book/${firstChapterSlug}/`}
                    class="inline-flex items-center gap-2 px-6 py-3 bg-white text-primary-700 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    Start Reading
                  </a>
                )}

                {downloads && downloads.map((dl) => (
                  <a
                    href={dl.url}
                    class="inline-flex items-center gap-2 px-5 py-3 border border-white/30 text-white rounded-lg font-medium hover:bg-white/10 transition-colors"
                    download
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    {dl.format.toUpperCase()}
                    {dl.size && <span class="text-white/60 text-sm">({dl.size})</span>}
                  </a>
                ))}

                {purchaseLinks && purchaseLinks.map((link) => (
                  <a
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 px-5 py-3 bg-amber-500 text-white rounded-lg font-medium hover:bg-amber-600 transition-colors"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    {link.label}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container mx-auto px-6 py-12">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-[1fr_300px] gap-12">
          <!-- Left: About & Content -->
          <div>
            <!-- About This Book -->
            <section class="bg-bg-primary rounded-xl p-8 mb-8">
              <div class="prose prose-lg max-w-none
                prose-headings:font-heading prose-headings:text-text-primary
                prose-h2:text-2xl prose-h2:mt-0 prose-h2:mb-4
                prose-p:text-text-secondary prose-p:leading-relaxed
                prose-ul:text-text-secondary prose-li:mb-2
                prose-strong:text-text-primary"
              >
                <Content />
              </div>
            </section>
          </div>

          <!-- Right: Table of Contents -->
          <aside>
            <div class="bg-bg-primary rounded-xl p-6 sticky top-24">
              <h2 class="text-lg font-bold text-text-primary mb-4 font-heading">
                Table of Contents
              </h2>
              <nav class="space-y-2">
                {sortedChapters.map((chapter) => {
                  const chapterSlug = chapter.slug.split('/').pop();
                  return (
                    <a
                      href={`/ai-seo-guide-book/${chapterSlug}/`}
                      class="flex items-start gap-3 p-3 rounded-lg hover:bg-bg-secondary transition-colors group"
                    >
                      <span class="flex-shrink-0 w-6 h-6 bg-primary-100 text-primary-700 rounded text-xs font-semibold flex items-center justify-center">
                        {chapter.data.chapterNumber}
                      </span>
                      <span class="text-sm text-text-secondary group-hover:text-text-primary transition-colors line-clamp-2">
                        {chapter.data.title}
                      </span>
                    </a>
                  );
                })}
              </nav>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
